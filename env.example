# Environment variables for local testing
# Copy this file to .env and fill in your actual values

# GitHub token for API access (can use a personal access token)
INPUT_GITHUB-TOKEN=ghp_your_github_token_here

# Google Gemini API key
INPUT_GEMINI-API-KEY=your_gemini_api_key_here

# Comma-separated list of labels to group PRs by
INPUT_GROUPING-LABELS=writer,ui,backend,api

# Whether PRs must have 'feature' label (true/false)
INPUT_REQUIRE-FEATURE-LABEL=false

# GitHub Actions environment variables
GITHUB_REPOSITORY=owner/repo
GITHUB_REF=refs/heads/main
GITHUB_SHA=abc123
GITHUB_ACTOR=test-user
GITHUB_EVENT_NAME=push
GITHUB_WORKFLOW=test-workflow
GITHUB_RUN_ID=123456
GITHUB_RUN_NUMBER=1
GITHUB_JOB=test-job
GITHUB_ACTION=test-action
GITHUB_ACTIONS=true
CI=true

# GitHub context for repository info
GITHUB_REPOSITORY_OWNER=forgent
GITHUB_REPOSITORY_NAME=changelog

# Optional: Enable debug logging
ACTIONS_STEP_DEBUG=true
